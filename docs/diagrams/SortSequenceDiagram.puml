@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":SortCommand" as SortCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

box Model MODEL_COLOR_T1
participant "addressBook:AddressBook" as AddressBook MODEL_COLOR
participant "persons:UniquePersonList" as PersonList MODEL_COLOR
end box

-> SortCommand : execute()
activate SortCommand

SortCommand -> SortCommand : createComparator(sortField, sortDirection)
activate SortCommand
SortCommand --> SortCommand : comp
deactivate SortCommand

SortCommand -> Model : sortPersonList(comp)
activate Model

Model -> AddressBook : sort(comp)
activate AddressBook

AddressBook -> PersonList : sort(comp)
activate PersonList
PersonList --> AddressBook
deactivate PersonList

AddressBook --> Model
deactivate AddressBook

Model --> SortCommand
deactivate Model

<-- SortCommand : CommandResult
deactivate SortCommand

@enduml
